<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RadioActivity"
    android:padding="15dp"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhận xét công cụ Android Studio"
        android:textSize="26sp" />
    <RadioGroup
        android:id="@+id/radgBinhChon"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RadioButton
        android:id="@+id/TDTot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tương đối tốt"
        android:textSize="24sp"/>
    <RadioButton
        android:id="@+id/Tot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tốt"
        android:textSize="24sp"/>
    <RadioButton
        android:id="@+id/RatTot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rất tốt"
        android:textSize="24sp"/>
    <RadioButton
        android:id="@+id/TuyetVoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tuyệt vời"
        android:textSize="24sp"/>
    <Button
        android:id="@+id/btnBinhChon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:backgroundTint="#009688"/>
    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:textColor="#FFFFFF"
        android:text="Bạn chọn: "
        android:textSize="26sp" />
    </RadioGroup>

</LinearLayout>