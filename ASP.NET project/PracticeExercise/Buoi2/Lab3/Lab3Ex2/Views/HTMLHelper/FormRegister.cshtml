
@{
    ViewBag.Title = "FormRegister";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2> Thông Tin về đơn vị tuyến </h2>
@{
    Html.BeginForm("Register", "HTMLHelper", FormMethod.Get);
    <table class="table table-bordered">
        <tr>
            <th colspan="2">Thông Tin Về Đơn Vị Tuyến</th>
        </tr>

        <tr>
            <td>@Html.Label("Tên Đơn Vị Tuyến (*)") </td>
            <td>@Html.TextBox("txtName") </td>
        </tr>

        <tr>
            <td>@Html.Label("Loại Hình Doanh Nghiệp (*)")</td>
            <td>
                @Html.DropDownList("Loai", new SelectList(ViewBag.listLoai, "ID", "Name"))
            </td>
        </tr>

        <tr>
            <td>@Html.Label("Số Lượng Nhân Viên")</td>
            <td>@Html.TextBox("txtNumber")</td>
        </tr>

        <tr>
            <th colspan="2">Thông Tin Liên Hệ</th>
        </tr>

        <tr>
            <td>@Html.Label("Địa chỉ(*)")</td>
            <td>@Html.TextArea("txtAddress")</td>
        </tr>

        <tr>
            <td>@Html.Label("Người Liên Hệ (*)")</td>
            <td>@Html.TextBox("txtPeople")</td>
        </tr>

        <tr>
            <td>@Html.Label("Số Điện Thoại (*)")</td>
            <td>@Html.TextBox("txtPhone")</td>
        </tr>

        <tr>
            <td>@Html.Label("Số Fax")</td>
            <td>@Html.TextBox("txtFax")</td>
        </tr>

        <tr>
            <td>@Html.Label("Email")</td>
            <td>@Html.TextBox("txtEmail")</td>
        </tr>

        <tr>
            <td>@Html.Label("Địa chỉ Website")</td>
            <td>@Html.TextBox("txtWebsite")</td>
        </tr>

        <tr>
            <th colspan="2">Thông Tin Đăng Nhập</th>
        </tr>

        <tr>
            <td>@Html.Label("Tên đăng nhập(*)")</td>
            <td>@Html.TextBox("txtUName")</td>
        </tr>

        <tr>
            <td>@Html.Label("Mật khẩu(*)")</td>
            <td>@Html.Password("txtPass")</td>
        </tr>

        <tr>
            <td>@Html.Label("Nhập lại mật khẩu(*)")</td>
            <td>@Html.Password("txCfPass")<p>(Lớn hơn 6 ký tự)</p></td>
        </tr>

        <tr>
            <td>@Html.Label("Nhận Thư Điện Tử")</td>
            <td>
                @Html.RadioButton("Checked", "Nhận", true) Nhận
                @Html.RadioButton("Checked", "Không Nhận") Không Nhận
            </td>
        </tr>

        <tr>
            <td><input type="submit" value="Đăng Ký" /></td>
            <td><input type="submit" value="Hủy bỏ"</td>
        </tr>
    </table>
    Html.EndForm();
}
