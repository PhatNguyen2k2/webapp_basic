
@{
    ViewBag.Title = "FactorialNumber";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Giai thừa từ 1 đến 10 </h2>
@{
    var i = 1;
    var numb = 1;
}
@functions{ 
    public int factorialNumber(int n)
    {
        if (n == 1)
            return 1;
        return n * factorialNumber(n - 1);
    }
}
@{ 
    for (i = 1; i <= 10; i++)
    {
               <p>Giai thừa @numb! là @factorialNumber(numb)</p>
            numb++;
    }
}
