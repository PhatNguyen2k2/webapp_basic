@model IEnumerable<De_7.Models.SanPham>

@foreach (var p in Model)
{
    <!-- Single Portfolio Area -->
    <div class="col-12 col-sm-6 col-lg-3 single_portfolio_item design home-design wow fadeInUp" data-wow-delay="100ms">
        <!-- Portfolio Thumbnail -->
        <div class="portfolio-thumbnail bg-img" style="background-image: url(/Content/img/@p.AnhDaiDien);"></div>
        <!-- Portfolio Hover Text -->
        <div class="portfolio-hover-overlay">
            <a href="/Home/Edit/@p.MaSanPham" class="portfolio-img d-flex align-items-center justify-content-center" title="Portfolio 1">
                <div class="port-hover-text">
                    <h3>@p.TenSanPham</h3>
                    <h5>@p.DonGiaBanNhoNhat đ</h5>
                </div>
            </a>
        </div>
    </div>

}

